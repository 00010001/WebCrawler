<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">

    <!-- https://stackoverflow.com/questions/30080810/el-expressions-not-evaluated-in-jsp -->




    <servlet>
        <servlet-name>httpPostSendSuccess</servlet-name>
        <jsp-file>/httpPostSendSuccess.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>httpPostSendSuccess</servlet-name>
        <url-pattern>/httpPostSendSuccess</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>test</servlet-name>
        <jsp-file>/test.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>header</servlet-name>
        <jsp-file>/header.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>header</servlet-name>
        <url-pattern>/html/header</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>footer</servlet-name>
        <jsp-file>/footer.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>footer</servlet-name>
        <url-pattern>/html/footer</url-pattern>
    </servlet-mapping>
</web-app>